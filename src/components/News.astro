---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import '../styles/global.css';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(b, a) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<body>

			<div class="postholder">
				{
					posts.map((post) => (
						<div class="post">
							<a href={`/blog/${post.slug}/`}>
							<div class="fade"></div>
							<img src={post.data.heroImage}>
							<FormattedDate date={post.data.pubDate} />
							<div class="title">{post.data.title}</div>
							<div class="desc">{post.data.description}</div>
							</a>
						</div>
					))
				}
			</div>
	</main>

</body>


<style>

	.header{
		left:5%;
		width:900px;
		font-size: 50px;
		color:white;
		line-height: 0px;
		position: absolute;
		font-family: Gilroy;
	}

	.new{
		right:20px;
		top:20px;
		position: absolute;
		color:white;
		font-family: Gilroy;
		padding-left:10px;
		padding-right:10px;
		padding-top:5px;
		padding-bottom:5px;
		background-color: red;
		border-radius:8px;
		z-index:1111;
		display:none;
	}

	.mainpost{
		display: none;
		width:100%;
		height:50%;
		top:0;
		left:0;
		position: absolute;
		overflow:hidden;
	}

	.post:nth-child(1){
		display: block;
	}

	.post:nth-child(2){
		display: block;
	}

	.post:nth-child(3){
		display: block;
	}

	.post:nth-child(4){
		display: block;
	}

	.mainpost:nth-child(1){
		display: block;
	}

	.postholder{
		width:80%;
		display: grid;
		grid-template-columns:repeat(auto-fit, minmax(300px, 1fr));
		position: absolute;
		gap: 20px;
		left:50%;
		transform: translate(-50%,50px);
		position: relative;
		z-index: 10;
	}
	.post{
		position: relative;
    	height:250px;
    	width:100%;
 		background-color:rgba(255, 255, 255, 0.041);
    	border-radius: 15px;
		font-family: Gilroy;
    	hyphens:auto;
    	overflow: hidden;
    	border: 3px solid rgba(255, 255, 255, 0.066);
    	transition: 0.5s;
		display:none;
	}

	.post:hover{
    	background-color:rgba(206, 206, 206, 0.117);
    	transform: translate(0,-5px);
    	box-shadow: 0px 0px 70px rgb(43, 43, 43);
    	transition: 0.5s;
  	}

  .post:hover img{
	filter: blur(8px) brightness(0.7);
	z-index:0;
	transition: 0.5s;
  	}

	img{

		width: 100%;
		left:0;
		z-index: 0;
		transition: 0.5s;
		width:auto;
		height:100%;
		left:50%;
		transform: translate(-50%,0);
		position: absolute;
	}

	.maintitle{
		position: absolute;
		z-index: 11;
		font-size: 60px;
		top:40%;
		text-align: center;
		left: 50%;
		transform: translate(-50%,0);
		font-family: Gilroy;
		transition: 0.5s;
	}

	.maindesc{
		position: absolute;
		z-index: 11;
		font-size: 30px;
		top:54%;
		text-align: center;
		left: 50%;
		transform: translate(-50%,0);
		font-family: Cafe;
		transition: 0.5s;
		display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
	}

	.title{
		position: absolute;
		z-index: 11;
		font-size: 30px;
		bottom:20px;
		left:20px;
		font-family: Gilroy;
		transition: 0.5s;
		width:90%;
	}

	.post:hover .title{
		transform: translate(0, -50px);
		transition: 0.5s;
	}

	.desc{
		position: absolute;
		font-family: Cafe;
		width:90%;
		font-size: 20px;
		left:20px;
		bottom:0;
		transform:translate(0,50px);
		transition: 0.5s;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
	}

	.post:hover .desc{
		transform: translate(0, -40px);
		transition: 0.5s;
	}

	.fade{
		width:100%;
		height:100%;
		background: linear-gradient(0deg, rgba(24,24,24,1) 0%, rgba(0,212,255,0) 100%);
		position: absolute;
		z-index:2;
		bottom:0;
		left:0;
		transition: 0.5s;
	}

	.post:hover .fade{
		transform: translate(0, 50px);
		transition: 0.5s;
	}

	a{
		bottom:50px;
		z-index:11;
		color:white;
	}

	@for $i from 1 through 10 {
    .post:nth-child(#{$i}n) {
		animation-name:fadeup;
        animation-delay: #{$i * 0.5}s;
    }

	@keyframes fadeup{
		0%{
			opacity:0;
		}
		100%{
			opacity:1;
		}
	}
}

Footer{
	position: relative;
	bottom:0;
}
</style>

