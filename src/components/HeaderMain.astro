---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { LanguageSelector } from "astro-i18next/components";
import { localizePath } from "astro-i18next";
import i18next from "i18next";
import i18next, { t, changeLanguage } from "i18next";
import { Trans, HeadHrefLangs } from "astro-i18next/components";
---



<r class="bannerholder">
	<a href="../"><img class="logo" src=" ../../Images/Wii_Link_Logo.png" width="200px"></a>
	<ul>
	<a href={localizePath("/")}><div class="banner">{t("header.home")}</div></a>
	<a href={localizePath("/blog")}><div class="banner">{t("header.news")}</div></a>
	<a href={localizePath("/guide/1welcome")}><div class="banner">{t("header.guide")}</div></a>
	<a href={localizePath("/status")}><div class="banner">{t("header.status")}</div></a>
	<a href={localizePath("/guide/4faq")}><div class="banner">{t("header.faq")}</div></a>
	<div class="banner strong">{t("header.install")}</div>
	</ul>
<a href="https://www.patreon.com/WiiLink24"><img class="donate" src=" ../../Images/patreon.svg" width="30px"></a>
<LanguageSelector showFlag={true} class="lang" />
</r>



<script>
	window.addEventListener("scroll", function() {
var r = document.querySelector("r");
r.classList.toggle("sticky", window.scrollY > 500);
	})
</script>
<script src="https://kit.fontawesome.com/da19af22d7.js" crossorigin="anonymous"></script>


<style>

a:link{
	text-decoration: none;
	color: rgba(255, 255, 255, 0.53);
}

a:visited{
	text-decoration: none;
	color: rgba(255, 255, 255, 0.53);
}

.bannerholder{
    top:0;
    left:0;
	width:100%;
	height:128px;
	background-color: rgba(255, 255, 255, 0);
    z-index: 80;
    transition: 0.5s;
    position: fixed;
}

.logo{
	top:50%;
	left:8%;
	transform:translate(0%,-100%);
	opacity:0;
	z-index: 0;
	position: absolute;
	transition: 0.5s;
}

.lang:hover{
	filter:opacity(1);
	transition: 0.2s;
}

.donate{
	top:50%;
	right:12%;
	transform: translate(0,-50%);
	filter: invert(1) opacity(0.7);
	position: absolute;
	transition: 0.2s;
}

.donate:hover{
	filter: invert(39%) sepia(54%) saturate(2336%) hue-rotate(332deg) brightness(82%) contrast(111%);
	transition: 0.2s;
}

ul{
	display: flex;
	gap:30px;
	left:6%;
	top:40%;
	transform: translate(0, -50%);
	font-family: Cafe;
	color:rgba(255, 255, 255, 0.53);
	position: absolute;
	transition: 0.5s;
}

.banner{
    position:relative;
    transition: 0.5s;
}

.banner:hover{
	color:white;
}

.strong{
	background: rgba(255, 0, 0, 0);
	padding:5px;
	padding-left:10px;
	padding-right:10px;
	border-radius: 18px;
	border:2px solid rgb(62, 161, 85);
	transform: translate(-8px, -7px);
}

.strong:hover{
	background: rgb(62, 161, 85);
}

.bannername{
    text-align: center;
    font-family: Gilroy;
    color:black;
    opacity: 0;
    transform: translate(0,-10);
    transition: 0.5s;
}

.banner:hover .bannername{
    opacity: 1;
    transform: translate(0,0px);
    transition: 0.5s;
}

.fade{
    width:100%;
    height:200px;
    bottom:0;
    left:0;
    background: linear-gradient(180deg, rgba(255,227,156,0) 0%, rgba(24,24,24,1) 100%);
    z-index: 1;
    position: fixed;
}

t{
    opacity: 0;
    transition: 0.5s;
}

t.sticky{
    opacity: 1;
    transition: 0.5s;
}

r.sticky .logo{
	transform:translate(0%,-50%);
	opacity:1;
	transition: 0.5s;
}

r.sticky ul{
	left:50%;
	transform: translate(-50%, -50%);
	transition: 0.5s;
}
.lang{
    top:50%;
	right:8%;
	transform: translate(0,-50%);
    background-image: url("../../Images/langswitcher.png");
    background-size: cover;
    background-color: rgba(255, 255, 0, 0);
    color:green;
    font-family:Cafe;
	filter: opacity(0.7);
    border: 0px;
    width:35px;
    height:35px;
    z-index: 100000000;
    position: absolute;
	transition:0.2s;
}

img{
	border-radius: 0px;
}

@media (min-width:2000px) {
		.bannerholder{
			width:2000px;
			left:50%;
			top:0px;
			transform: translate(-50%, 0);
			border-bottom-left-radius: 8px;
			border-bottom-right-radius: 8px;
			position: fixed;
	}
</style>
