---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import '../styles/global.css';
import Footer from '../.omponents/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Sidebar from '../components/GuideSidebar.astro'
import { getCollection } from 'astro:content';
const posts = (await getCollection('guide'));
type Props = CollectionEntry<'guide'>['data'];
const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
	<meta http-equiv="Content-Type" content="text/html;charset=utf-8">
<body>
	<main>
		<div class="head">
		<div class="fade2"></div>
		<img class="image" src="../../Images/copyrightbg.png" width="100%">
	</div>
		<img src="../../Images/guidestop.png" style="filter:invert(1); transform:translate(-100px,-100px); opacity:0.03; position:absolute; width:100%;">
		<Header />
		<Sidebar />
		<div class="guideholder">
			<div class="guidecontent">
				<slot />
			</div>
		</div>
	</main>

</body>
</html>

<style>

pre {
    padding: 0.8rem;
    overflow: auto;
    font-size: 0.9rem;
    line-height: 1.45;
    border-radius: 0.3rem;
    -webkit-overflow-scrolling: touch;
  }

	a:link{
    color:rgba(32,213,136,1);  
}

a:hover{
    color:rgb(22, 152, 96);
}

a:visited{
    color:rgb(32, 180, 213);
}

	article{
		top:0;
		left:0;
		width:100%;
		height:auto;
		position:relative;

	}
	.title {
		font-size: 50px;
		font-family: Gilroy;
		z-index: 100;
		left:50%;
		width:100%;
		text-align: center;
		transform: translate(-50%, 0);
		top:150px;
		position:absolute;
	}
	.last-updated-on {
		font-style: italic;
	}

	.postexpand{
		width:95%;
		position:relative;
		font-family: Cafe;
		color:white;
		margin-top:350px;
		left:50%;
		text-align: justify;
		transform: translate(-50%, 0);
	}

	.heroimg{
		height:100%;
		width:100%;
		position:absolute;
		top:0;
		left:0;
		overflow: hidden;
	}

	.fade{
width:100%;
height:60%;
background: linear-gradient(0deg, rgba(33,33,33,1) 0%, rgba(33,33,33,0) 100%);
position: absolute;
z-index:2;
bottom:0;
left:0;
transition: 0.5s;
}

	img{
		width:100%;
		height:auto;
		top:0;
		height:auto;
		position: absolute;
		filter:blur(8px) brightness(0.5);


	}

	hr{
		width:0;
	}

	article{
		width:80%;
		left:50%;
		top:150px;
		transform: translate(-50%,0);
		border: 3px solid rgba(255, 255, 255, 0.066);
		background-color:rgba(255, 255, 255, 0.041);
		border-radius: 15px;
		overflow:hidden;

	}

	p{
		font-family: Cafe;
		color:white;
	}
	h2{

	}
	h3{
		font-family: Gilroy;
	}
	h4{
		font-family: Gilroy;
	}
	.tophold{
		height:500px;
		width:100%;
		top:0;
		left:0;
		position: absolute;
		overflow:hidden;
		z-index:0;
	}

	.exit{
		top:20px;
		right:20px;
		width:50px;
		height:50px;
		border: 0px solid red;
		border-radius:8px;
		position: absolute;
		z-index: 1000;
		transition: 0.2s;
	}

	.exit:hover{
		border:3px solid rgba(255, 0, 0, 0.651);
		transform: translate(3px, -3px);
		transition: 0.2s;
	}
	.close{
		filter: blur(0px) invert(1);
		transform: scale(50%);
	}
	.image{
		width:100%;
		height: 100%;
		z-index: 0;
		position: absolute;
	}

	.head{
		width:100%;
		height:100%;
		top:0;
		left:0;
		position: fixed;
	}

	.fade2{
		width:100%;
		height:100%;
		top:0;
		left:0;
		background: linear-gradient(0deg, rgba(24,24,24,1) 70%, rgba(0,212,255,0) 100%);
		z-index: 1;
		position: absolute;
	}

	.guidecontent{
		width:90%;
		left:50%;
		transform: translate(-50%, 0);
		position: absolute;
		width:95%;
		position:relative;
		font-family: Cafe;
		color:white;
		margin-top:20px;
		left:50%;
		text-align: justify;
		transform: translate(-50%, 0);
	}

	.guideholder{
		width:75%;
		height:90%;
		bottom:0;
		right:0;
		background-color: rgba(39, 39, 39, 0.868);
		backdrop-filter: blur(8px);
		border-top-left-radius: 18px;
		z-index: 1;
		overflow: scroll;
		position: absolute;
	}

	.header{
		left:5%;
		width:900px;
		font-size: 50px;
		color:white;
		line-height: 0px;
		position: absolute;
		font-family: Gilroy;
	}

	.new{
		right:20px;
		top:20px;
		position: absolute;
		color:white;
		font-family: Gilroy;
		padding-left:10px;
		padding-right:10px;
		padding-top:5px;
		padding-bottom:5px;
		background-color: red;
		border-radius:8px;
		z-index:1111;
		display:none;
	}

	.mainpost{
		display: none;
		width:100%;
		height:60%;
		top:0;
		left:0;
		position: absolute;
		overflow:hidden;
	}

	.post:nth-child(1) .new{
		display: block;
	}

	.mainpost:nth-child(1){
		display: block;
	}

	.postholder{
		width:80%;
		display: grid;
		grid-template-columns:repeat(auto-fit, minmax(600px, 1fr));
		position: absolute;
		gap: 20px;
		top:45%;
		left:50%;
		transform: translate(-50%,500px);
		position: relative;
		padding-bottom:500px;
		z-index: 10;
	}

	.postholdermini{
		width:80%;
		display: grid;
		grid-template-columns:repeat(auto-fit, minmax(300px, 1fr));
		position: absolute;
		gap: 20px;
		left:50%;
		transform: translate(-50%,0px);
		position: relative;
		z-index: 10;
	}
	.post{
		position: relative;
    	height:250px;
    	width:100%;
 		background-color:rgba(255, 255, 255, 0.041);
    	border-radius: 15px;
		font-family: Gilroy;
    	hyphens:auto;
    	overflow: hidden;
    	border: 3px solid rgba(255, 255, 255, 0.066);
    	transition: 0.5s;
	}

	.post:nth-child(n+7){
		display:none;
	}

	.postmini:nth-child(n+8){
		display:block;
	}

	.postmini{
		position: relative;
    	height:250px;
    	width:100%;
 		background-color:rgb(39, 39, 39);
    	border-radius: 15px;
		font-family: Gilroy;
    	hyphens:auto;
    	overflow: hidden;
    	border: 3px solid rgba(255, 255, 255, 0.066);
    	transition: 0.5s;
		display:none;
	}

	.post:hover{
    	background-color:rgba(206, 206, 206, 0.117);
    	transform: translate(0,-5px);
    	box-shadow: 0px 0px 70px rgb(43, 43, 43);
    	transition: 0.5s;
  	}


	  .postmini:hover{
    	background-color:rgb(39, 39, 39);
    	transform: translate(0,-5px);
    	box-shadow: 0px 0px 70px rgb(43, 43, 43);
    	transition: 0.5s;
  	}

  .post:hover img{
	filter: blur(8px) brightness(0.7);
	z-index:0;
	transition: 0.5s;
  	}

	img{

		width: 100%;
		left:0;
		z-index: 0;
		transition: 0.5s;
	}

	.maintitle{
		position: absolute;
		z-index: 11;
		font-size: 60px;
		top:200px;
		text-align: center;
		left: 50%;
		transform: translate(-50%,0);
		font-family: Gilroy;
		transition: 0.5s;
	}

	.maindesc{
		position: absolute;
		z-index: 11;
		font-size: 30px;
		top:300px;
		text-align: center;
		left: 50%;
		transform: translate(-50%,0);
		font-family: Cafe;
		transition: 0.5s;
		display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
	}

	.title{
		position: absolute;
		z-index: 11;
		font-size: 30px;
		bottom:20px;
		left:20px;
		font-family: Gilroy;
		transition: 0.5s;
	}

	.post:hover .title{
		transform: translate(0, -50px);
		transition: 0.5s;
	}

	.desc{
		position: absolute;
		font-family: Cafe;
		width:90%;
		font-size: 20px;
		left:20px;
		bottom:0;
		transform:translate(0,50px);
		transition: 0.5s;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
	}

	.post:hover .desc{
		transform: translate(0, -40px);
		transition: 0.5s;
	}

	.fade{
		width:100%;
		height:60%;
		background: linear-gradient(0deg, rgba(24,24,24,1) 0%, rgba(0,212,255,0) 100%);
		position: absolute;
		z-index:2;
		bottom:0;
		left:0;
		transition: 0.5s;
	}

	.post:hover .fade{
		transform: translate(0, 50px);
		transition: 0.5s;
	}

	a{
		bottom:50px;
		z-index:11;
		color:white;
	}

	@for $i from 1 through 10 {
    .post:nth-child(#{$i}n) {
		animation-name:fadeup;
        animation-delay: #{$i * 0.5}s;
    }

	@keyframes fadeup{
		0%{
			opacity:0;
		}
		100%{
			opacity:1;
		}
	}
}

Footer{
	position: relative;
	bottom:0;
}

blockquote p {
    padding: 15px;
    background: #eee;
    border-radius: 5px;
}
</style>

